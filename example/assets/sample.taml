!doctype
:html
  :head
    :title Hello World!
    :style = $css
  :body
    :header#top
      Hello World
    :div#container.show-grid
      :section#main
        :h3 Contenido
        :ul
          - for ($i = 0; $i < 10; $i += 1)
          :li
            Elemento %{$i + 1}
            - if ($i == 3)
            :ul
              :li other
            - endif
          - endfor
      :aside#menu
        Menu
          :a.button FTW!
    :footer#bottom
      &copy; Copyright %{date('Y')}
