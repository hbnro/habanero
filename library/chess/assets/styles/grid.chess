/**
 * Basic grid rules
 */

$width = 740px
$columns = 5
$separation = 10px


@mixin grid {
  @include container($width);
  &.show-grid {
    background-image: url(?grid=ceil(calc($width / $columns)));
  }
}

@mixin columns($span: 1) {
  display: inline;
  float: left;
  width: calc((($width / $columns) * $span) - $separation);
  margin-left: $separation;
  &:first-child {
    margin-left: 0;
  }
}

