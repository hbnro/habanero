/**
 * Basic grid rules
 */

$width = 740px
$columns = 5
$separation = 10px

@mixin grid {
  width: num($width);
  @include clearfix;
}

@mixin columns($span: 1) {
  display: inline;
  float: left;
  width: calc((($width / $columns) * $span) - $separation);
  margin-left: $separation;
  &:first-child {
    margin-left: 0;
  }
}

