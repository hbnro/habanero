/**
 * Basic mixins
 */

@mixin nobox {
  * {
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
}

@mixin btcf {
  &:after {
    content: '';
    display: table;
    clear: both;
  }
}

@mixin clearfix {
  *zoom: 1;
  &:after,
  &:before {
    content: '';
    display: table;
  }
  &:after {
    clear: both;
  }
}

@mixin center-block {
  display: block;
  margin: 0 auto;
}

@mixin size($width: 5px, $height: 5px) {
	height: num($height);
	width: num($width);
	overflow: hidden;
	display: block;
}

@mixin square($size: 5px) {
  @include size($size, $size);
}

@mixin sprite-box($x, $y, $w: 16px, $h: 16px, $left: 0, $top: 0) {
  background-position: calc((($x * $w) + $left) * -1px) calc((($y * $h) + $top) * -1px);
  @include size($w, $h);
}

@mixin inline-image($src: 'blank.gif') {
  @include size(image-size($src, 0), image-size($src, 1));
  background: url($src) no-repeat;
  text-indent: -99999px;
  white-space: nowrap;
}

@mixin placeholder($color: #graylight) {
  :-moz-placeholder {
    color: $color;
  }
  ::-webkit-input-placeholder {
    color: $color;
  }
}

@mixin background($color: #white, $alpha: 1) {
  background-color: hsla(hue($color), saturation($color), lightness($color), $alpha);
}

@mixin border($color: #white, $alpha: 1) {
  border-color: hsla(hue($color), saturation($color), lightness($color), $alpha);
  background-clip: padding-box;
}

@mixin opacity($num: 1) {
	filter: format("alpha(opacity=%d)", calc($num * 100));
	-khtml-opacity: $num;
	-moz-opacity: $num;
	opacity: $num;
}

